
<div class="container flex-grow" >
    <%- include('./partials/ResponseAlert',{
        "request":request
    }) %> 
 
    <div class="py-20 h-screen px-2 bg-grey-200">
        <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden md:max-w-lg">
            <div class="md:flex">
                <div class="w-full">
                    <div class="p-4 border-b-2"> <span class="text-lg font-bold text-gray-600">Add Photo</span> </div>
                    <div class="p-3">
                        <form action="/upload" method="POST" enctype="multipart/form-data">
                            <% if(request.isLogin) {%>
                                <input type="hidden" value="<%=request.session.user._id%>" name="id">
                              <%}else{%>
                                <input type="hidden" value="Hello" name="id">
                            <% } %>  
                        <div class="mb-2">
                            <div class="relative h-40 rounded-lg border-dashed border-2 border-gray-200 bg-white flex justify-center items-center hover:cursor-pointer">
                                <div class="absolute">
                                    <div class="flex flex-col items-center "> <i class="fa fa-cloud-upload fa-3x text-gray-200"></i> <span class="block text-gray-400 font-normal">Attach you files here</span> <span class="block text-gray-400 font-normal">or</span> <span class="block text-blue-400 font-normal">Browse files</span> </div>
                                </div> <input type="file" class="h-full w-full opacity-0" name="file" id="file">
                            </div>
                            <div class="flex justify-between items-center text-gray-400"> <span>Accepted file type:png/jpg only</span> <span class="flex items-center "><i class="fa fa-lock mr-1"></i> secure</span> </div>
                        </div>
                        <div class="mt-3 text-center pb-3"> <button class="w-full h-12 text-lg w-32 bg-blue-600 rounded text-white hover:bg-blue-700" type="submit">Upload</button> </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
