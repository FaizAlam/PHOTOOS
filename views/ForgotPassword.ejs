
<div class="container flex-grow" >
    <%- include('./partials/ResponseAlert',{
        "request":request
    }) %> 
        
    <div class="w-full  md:flex md:justify-center mb-6 mt-12">
        <form action="<%= request.mainURL%>/Login" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" style="width: 18rem;">
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
              Email
            </label>
            <input name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Email Address" required>
          </div>
          <div class="flex items-center justify-between">
            <button class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
              Send Recovery Link
            </button>
            
          </div>
        </form>
    
      </div>
</div>