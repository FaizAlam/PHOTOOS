<div class="container flex-grow" >
    <%- include('./partials/ResponseAlert',{
        "request":request
    }) %> 
    <div class="w-full h-64 flex justify-center items-center">
        <div>
             <div class="w-96">  
                 <div class="shadow hover:shadow-lg transition duration-300 ease-in-out xl:mb-0 lg:mb-0 md:mb-0 mb-6 cursor-pointer group">
                     
                    <% if(request.session.user.avatar){%> 
                        <div class="flex flex-wrap justify-center">
                            <div class="w-6/12 sm:w-11/12 px-4 flex items-center justify-center">
                              <img src="<%= request.session.user.avatar %>" alt="..." class="shadow-lg rounded-full max-w-full h-auto   border-none" />
                            </div>
                          </div>
                    <% }else{ %> 
                        
                        <form action="/upload_avatar" method="POST" enctype="multipart/form-data">
                        <input type="hidden" value="<%=request.session.user._id%>" name="id">
                        <div class="relative h-40 rounded-lg border-dashed border-2 border-gray-200 bg-white flex justify-center items-center hover:cursor-pointer w-full mt-4">
                            <div class="absolute">
                                <div class="flex flex-col items-center "> <i class="fa fa-cloud-upload fa-3x text-gray-200"></i> <span class="block text-gray-400 font-normal">Upload your avatar here</span> <span class="block text-gray-400 font-normal">or</span> <span class="block text-blue-400 font-normal">Browse files</span> </div>
                            </div> <input type="file" class="h-full w-full opacity-0" name="avatar" id="file">
                        </div>
                        <div class="mt-3 text-center pb-3"> <button class="w-full h-12 text-lg w-32 bg-blue-600 rounded text-white hover:bg-blue-700" type="submit">Upload</button> </div>
                        </form>
                    <% } %> 
                 
                 <div class="px-4 py-3 bg-white">
                     <h1 class="text-gray-800 font-semibold text-lg hover:text-red-500 transition duration-300 ease-in-out" style="font-size: 3rem;"><%= request.session.user.name  %> </h1>
                     <h2 class="text-gray-400 font-light text-lg hover:text-grey-800 transition duration-300 ease-in-out"><%= request.session.user.email  %> </h2>
                     
                 </div>
                 </div>
            </div>
        </div>
     </div>

</div>